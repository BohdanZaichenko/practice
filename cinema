#include <stdio.h>
#include <string.h>
#include <locale.h>

#define MAX_FILMS 10
#define MAX_GENRES 7

typedef struct {
    char title[100];
    char genre[50];
    int year;
    float rating;
    int duration;
    float ticket_price;
    int available_seats;
    int start_hour;
    char description[500];
} Film;

Film films[MAX_FILMS] = {
    {"Шоу Трумена", "Drama", 1998, 8.2, 103, 100, 100, 0, "Шоумен Трумен Бербенк - найпопулярніший телешоумен у світі, якому всі дивляться. Проте він не знає, що його життя - це лише реаліті-шоу, яке спостерігає за ним 24 години на добу."},
    {"Темний лицар", "Action", 2008, 9, 152, 120, 120, 0, "У темний період Готема з'являється новий злочинець Джокер, що стріляється проти поліції і тероризує місто. Бетмен має зробити неможливий вибір між правильним і правильним."},
    {"Вартовi галактики 3", "Sci-Fi", 2023, 8.2, 153, 180, 80, 0, "Повернення команди героїв-вартових, що володіють незвичайними здібностями, які використовують для захисту галактики від загрози."},
    {"Флеш", "Sci-Fi", 2023, 7.1, 143, 180, 90, 0, "Баррі Аллен, молодий швидкісний бігун, опиняється в центрі міжвимірного конфлікту, коли ворожа сила намагається захопити його місто."},
    {"Мiсто астероїдiв", "Comedy", 2023, 7, 106, 180, 100, 0, "Група космічних шахраїв вирішує викрасти мегатонну вибухову речовину з астероїда, але виявляється, що місцеве населення зовсім не таке, як вони очікували."},
    {"Втеча з Шоушенка", "Drama", 1994, 9.3, 142, 100, 80, 0, "Анді Дюфрейн, засуджений до пожиттєвого ув'язнення за вбивство дружини та її коханця, розробляє складний план втечі з в'язниці Шоушенк."},
    {"Коко", "Adventure", 2017, 8.4, 105, 100, 80, 0, "Маленький хлопчик Мігель випадково потрапляє в Рай, де він зустрічає своїх померлих родичів і розуміє, що його призначення - стати музикантом."},
    {"Інтерстеллар", "Sci-Fi", 2014, 8.6, 169, 150, 150, 0, "У майбутньому людство стикається зі зміною клімату на Землі, і експедиція космонавтів вирушає на пошуки нового життєвого простору на інших планетах."},
    {"Суспiрiя", "Horror", 1977, 7.4, 98, 80, 50, 0, "Американська танцівниця приїжджає в престижну німецьку балетну академію, де розгортаються страшні і таємничі події."},
    {"Зелена миля", "Drama", 1999, 8.6, 189, 120, 100, 0, "У в'язниці з'являється новий засуджений, який має надприродні здібності, і він впливає на життя інших ув'язнених і персоналу."}
};

int num_films = MAX_FILMS;

void print_menu() {
    printf("\n----- КIНОТЕАТР -----\n");
    printf("1. Переглянути фiльми\n");
    printf("2. Пошук за жанром\n");
    printf("3. Подивитися опис фільму\n");
    printf("4. Купити квиток\n");
    printf("5. Вихiд\n");
    printf("-----------------------\n");
    printf("Виберiть опцiю: ");
}

void print_all_films() {
    printf("\n--- ФIЛЬМИ ---\n");
    for (int i = 0; i < num_films; i++) {
        printf("%d. %s (%s) - Рiк: %d, Рейтинг IMDb: %.1f, Тривалiсть: %d хв. Цiна квитка: %.2f грн. Мiсць залишилось: %d\n",
               i + 1, films[i].title, films[i].genre, films[i].year, films[i].rating,
               films[i].duration, films[i].ticket_price, films[i].available_seats);
    }
}

void search_by_genre() {
    char search_genre[50];
    printf("Введiть жанр для пошуку: ");
    scanf("%s", search_genre);

    printf("\n--- РЕЗУЛЬТАТИ ПОШУКУ ---\n");
    int found = 0;
    for (int i = 0; i < num_films; i++) {
        if (strcmp(films[i].genre, search_genre) == 0) {
            printf("%d. %s (%s) - Рiк: %d, Рейтинг: %.1f, Тривалiсть: %d хв. Цiна квитка: %.2f грн. Мiсць залишилось: %d\n",
                   i + 1, films[i].title, films[i].genre, films[i].year, films[i].rating,
                   films[i].duration, films[i].ticket_price, films[i].available_seats);
            found = 1;
        }
    }
    if (!found) {
        printf("Фiльми з жанром '%s' не знайдено.\n", search_genre);
    }
}

void view_description() {
    int film_choice;

    printf("\nВиберiть фiльм, опис якого ви хочете подивитися: ");
    scanf("%d", &film_choice);

    if (film_choice < 1 || film_choice > num_films) {
        printf("Некоректний вибiр фiльму.\n");
        return;
    }

    Film *selected_film = &films[film_choice - 1];

    printf("Опис фільму \"%s\":\n%s\n", selected_film->title, selected_film->description);
}

void buy_ticket() {
    int film_choice;
    int num_tickets;
    int chosen_hour;

    printf("\nВиберiть фiльм для купiвлi квитка: ");
    scanf("%d", &film_choice);

    if (film_choice < 1 || film_choice > num_films) {
        printf("Некоректний вибiр фiльму.\n");
        return;
    }

    Film *selected_film = &films[film_choice - 1];

    printf("Ви обрали фiльм: %s (%s) - Рiк: %d, Рейтинг: %.1f, Тривалiсть: %d хв. Цiна квитка: %.2f грн\n",
           selected_film->title, selected_film->genre, selected_film->year, selected_film->rating,
           selected_film->duration, selected_film->ticket_price);

    printf("Доступнi мiсця: %d\n", selected_film->available_seats);

    printf("Введiть кiлькiсть квиткiв, яку бажаєте придбати: ");
    scanf("%d", &num_tickets);

    if (num_tickets <= 0) {
        printf("Кiлькiсть квиткiв повинна бути бiльше 0.\n");
        return;
    }

    if (num_tickets > selected_film->available_seats) {
        printf("Вибачте, доступно тiльки %d мiсць.\n", selected_film->available_seats);
        return;
    }

    printf("Оберiть годину сеансу (0-23): ");
    scanf("%d", &chosen_hour);

    if (chosen_hour < 0 || chosen_hour > 23) {
        printf("Некоректне значення години. Будь ласка, виберiть значення вiд 0 до 23.\n");
        return;
    }

    selected_film->start_hour = chosen_hour;

    float total_price = num_tickets * selected_film->ticket_price;
    printf("Вартiсть %d квиткiв: %.2f грн\n", num_tickets, total_price);

    selected_film->available_seats -= num_tickets;

    printf("Успiшно придбано %d квиткiв. Дякуємо за покупку! Насолоджуйтесь фiльмом.\n", num_tickets);
}

int main() {
    setlocale(LC_ALL, "Ukr");
    int choice;
    do {
        print_menu();
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                print_all_films();
                break;
            case 2:
                search_by_genre();
                break;
            case 3:
                view_description();
                break;
            case 4:
                buy_ticket();
                break;
            case 5:
                printf("До зустрiчi у кiнотеатрi!\n");
                break;
            default:
                printf("Некоректний вибiр опцiї. Спробуйте ще раз.\n");
                break;
        }
    } while (choice != 5);

    return 0;
}
